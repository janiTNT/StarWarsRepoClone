		{
			ChainedTo = WeaponEmitter2
			Trigger = WeaponEmitter2
		}
		Barrel1GraphicsA : &<siege_turbolaser12x12.rules>/Part/Components/Barrel1Graphics
		{
			ResetAnimationTrigger = WeaponEmitter
		}		
		Barrel2GraphicsA : &<siege_turbolaser12x12.rules>/Part/Components/Barrel2Graphics
		{
			ResetAnimationTrigger = WeaponEmitter2
		}
	}
