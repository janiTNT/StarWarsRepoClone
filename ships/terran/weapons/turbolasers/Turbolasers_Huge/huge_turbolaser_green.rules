Components
	{
		ReloadProgressBar : &<huge_turbolaser_switchable.rules>/ReloadProgressBarBase
		{
			LowColor = [0, 64, 0]
			HighColor = [0, 255, 0]
		}

		BulletEmitterCenter : &<huge_turbolaser_switchable.rules>/BulletEmitterBase
		{
			Type = BulletEmitter
			Location = [9.609375, 0]
			Bullet = &/SW_SHOTS/turretionizingheavylasergreenshot
		}

		BulletEmitterLeft : &<huge_turbolaser_switchable.rules>/BulletEmitterBase
		{
			Type = BulletEmitter
			Location = [9.609375, 1.5625]
			Bullet = &/SW_SHOTS/turretionizingheavylasergreenshot
		}

		BulletEmitterRight : BulletEmitterLeft
		{
			Type = BulletEmitter
			Location = [9.609375, -1.5625]
		}

		FireEffectCenter
		{
			Type = TriggeredEffects
			ChainedTo = BulletEmitterCenter
			Trigger = BulletEmitterCenter
			AnchorMediaEffects = true
	
			MediaEffects
			[
				&/SW_PARTICLES/Shot/Laser/Shoot/Large/Green
				&/SW_SOUNDS/HeavyTurbolaserBlasterSFX
				&<../Turbolasers_Flak_Cannon/particles/flak_cannon_shoot_flash_large.rules> // &/SW_PARTICLES/SWFlakLargeFlash &<./Data/ships/terran/point_defense/particles/flak_cannon_shoot_flash_large.rules>
				&<../Turbolasers_Flak_Cannon/particles/flak_cannon_smoke_large.rules> // &/SW_PARTICLES/SWFlakLargeSmoke // &<./Data/ships/terran/point_defense/particles/flak_cannon_smoke_large.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot.rules>
			]
		}

		FireEffectLeft
		{
			Type = TriggeredEffects
			ChainedTo = BulletEmitterLeft
			Trigger = BulletEmitterLeft
			AnchorMediaEffects = true
	
			MediaEffects
			[
				&/SW_PARTICLES/Shot/Laser/Shoot/Large/Green
				&/SW_SOUNDS/HeavyTurbolaserBlasterSFX
				&<../Turbolasers_Flak_Cannon/particles/flak_cannon_shoot_flash_large.rules> // &/SW_PARTICLES/SWFlakLargeFlash &<./Data/ships/terran/point_defense/particles/flak_cannon_shoot_flash_large.rules>
				&<../Turbolasers_Flak_Cannon/particles/flak_cannon_smoke_large.rules> // &/SW_PARTICLES/SWFlakLargeSmoke // &<./Data/ships/terran/point_defense/particles/flak_cannon_smoke_large.rules>
				&<./Data/ships/terran/point_defense/particles/point_defense_shoot.rules>
			]
		}

		FireEffectRight : FireEffectLeft
		{
			ChainedTo = BulletEmitterRight
			Trigger = BulletEmitterRight
		}

		LightGraphics
		{
			Type = Graphics
			OperationalToggle = CommonOnShootEffectTimer
			InvertOperationalToggle = true
			ChainedTo = TurretLocationProxy
			Location = [1.9, 0]

			OperationalRoofLighting
			{
				Layer = "roof_lights_fancy"
				DamageLevels
				[
					{
						File = "./Data/ships/common/light_blob.png"
						Size = &<huge_turbolaser_switchable.rules>/OperationalRoofLightingBase/Size
						Z = &<huge_turbolaser_switchable.rules>/OperationalRoofLightingBase/Z
						VertexColor = [16, 255, 16] // [16, 120, 255]
					}
				]
			}
		}
	}
LaserStats
{
	NameKey = "StatCategories/HeavyGreenConcussiveBlastLasershot"
	Stats
	{
		ShieldDamagePerShot = &~/Components/BulletEmitterLeft/Bullet/Components/Hit/HitShield/HitEffects/0/Damage
		ShieldDamagePerSecond = (&ShieldDamagePerShot) * (&<huge_turbolaser_switchable.rules>/TurretStats/Stats/ROF)
		ShieldDamage = [&../ShieldDamagePerShot, &../ShieldDamagePerSecond]
		DamagePerShot = &~/Components/BulletEmitterLeft/Bullet/Components/Hit/HitOperational/HitEffects/0/Damage
		DamagePerSecond = (&DamagePerShot) * (&<huge_turbolaser_switchable.rules>/TurretStats/Stats/ROF)
		Damage = [&../DamagePerShot, &../DamagePerSecond]
		//ShotSpeed = &~/Components/WeaponEmitter/Bullet/Speed
		//ShotHP = &~/Components/WeaponEmitter/Bullet/Components/Targetable/Health
	}
}
